<% provide(:title, "Details") %>
<p id="notice"><%= notice %></p>

<p>
  <strong>Episode ID:</strong>
  <%= @episode.id %>
</p>

<p>
  <strong>Episode Narrative:</strong>
  <%= @episode.description %>
</p>

<p>
  <strong>Events:</strong>
  <% @episode.events.each do |event| %>
    <%= link_to event.id, event %>
  <% end %>
</p>

<p>
<%= link_to 'Edit', edit_episode_path(@episode), class: "btn btn-primary" %>
<%= link_to 'Back to Episodes', episodes_path, class: "btn btn-primary" %>
</p>