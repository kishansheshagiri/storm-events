<% provide(:title, "Events") %>
<p id="notice"><%= notice %></p>

<div class="panel panel-default panel-table" style="margin-top: -15px">
  <div class="panel-heading">
    <div class="row">
      <div class="col col-xs-6">
        <h1 class="panel-title text-left" style="font-size: 32px;">Storm Events</h1>
      </div>
      <div class="col col-xs-6 text-right">
        <%= link_to "New Event", new_event_path, class: "btn btn-sm btn-primary btn-create" %>
      </div>
    </div>
  </div>
    <div class="panel-footer">
    <div class="row">
      <div class="col col-xs-4" style="margin-top: 6px">Page 1 of 5</div>
      <div class="col col-xs-8">
        <ul class="pagination hidden-xs pull-right" style="margin-top: 0px; margin-bottom: 0px ">
          <li><a href="#">1</a></li>
          <li><a href="#">2</a></li>
          <li><a href="#">3</a></li>
          <li><a href="#">4</a></li>
          <li><a href="#">5</a></li>
          <li><a href="#">«</a></li>
          <li><a href="#">»</a></li>
        </ul>
      </div>
    </div>
  </div>
  <div class="panel-body" style="margin-top: -10px">
    <table class="table table-hover table-bordered table-list" >
      <thead>
        <tr>
          <th>Event ID</th>
          <th>Strom Type</th>
          <th>County</th>
          <th>State</th>
          <th>Begin Time</th>
          <th>Source</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @events.each do |event| %>
          <tr>
            <td><%= event.id %></td>
            <td><%= event.storm_type %></td>
            <td><%= event.county_name %></td>
            <td><%= event.state_name %></td>
            <td><%= event.begin_time %></td>
            <td><%= event.source %></td>
            <td><%= link_to 'Show', event %></td>
            <td><%= link_to 'Edit', edit_event_path(event) %></td>
            <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>
